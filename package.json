{
  "name": "github-zread-button",
  "version": "1.0.0",
  "description": "Adds a Zread.ai button to GitHub repository pages",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:all": "wxt build --browser chrome && wxt build --browser firefox",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare-release": "./scripts/prepare-release.sh",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "zip:chrome": "cd .output/chrome-mv3 && zip -r ../../chrome-extension.zip . && cd ../..",
    "zip:firefox": "cd .output/firefox-mv2 && zip -r ../../firefox-extension.zip . && cd ../.."
  },
  "keywords": [
    "github",
    "browser-extension",
    "zread",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/chrome": "^0.0.276",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9",
    "wxt": "^0.20.11"
  }
}
